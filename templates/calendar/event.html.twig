{% extends 'default.html.twig' %}

{% set cookie = 'calendar_event_'~page.calendar_event.uuid %}
{% set event = page.calendar_event %}
{% set past  = date(event.trueEndTime) < date() %}

{% block title %}{{event.title|capitalize}}{% endblock %}


{% block main %}

  <h4 class="m-3 ml-md-0"><i class="far fa-calendar-alt mr-1 mr-md-2"></i> Kalender <span class="text-muted"> / {{event.category}}</span></h4>

  <div class="p-3 mb-4 {% if event.cancelled %}alert-danger{% else %}bg-white{% endif %} shadow-sm">

    <div class="media align-top pt-2 cal-{{event.category.sequence}}">

      <span class="badge badge-dark mr-3 cal cal-md cal-{{event.category.sequence}}">{{event.startTime|date('d')}}<br>{{event.startTime|localizeddate('none', 'none', null, null, 'LLL')|trim('.')}}</span>

      <div class="media-body lh-125">

        <h5 class="pb-0 mb-1 d-flex justify-content-between">{{event.title|ucfirst}}
          <small>
            {% if event.cancelled %}<span class="badge badge-danger ml-1">Geannuleerd</span>{% endif %}
            {% if cookie not in app.request.cookies|keys and event.startTime>date() %}<span class="badge badge-secondary ml-1">Nieuw</span>{% endif %}
          </small>
        </h5>

        <h6 class="d-flex justify-content-between mb-2">{{event.getFormattedPeriod|lower}}</h6>

        <ul class="list-unstyled {% if not event.cancelled %}text-muted{% endif %} small cal">
          {% if event.competition is empty %}
            {% if event.location %}<li class="mb-1"><i class="fas fa-map-marked-alt"></i> {{event.location|ucwords}}</li>{% endif %}
          {% else %}
            <li class="mb-1"><i class="fas fa-swimming-pool"></i> {{event.competition.pool}}{% if event.location %}, {{event.location|ucwords}}{% endif %}</li>
            {% if event.competition.teams|length > 0%}
              <li class="mb-1"><i class="fas fa-swimmer"></i>
                {% for team in event.competition.teams %}<span class="pr-1">{{team.abbr}}</span>{% endfor %}
              </li>
            {% endif %}
            {% if event.competition.restrictions %}
              <li class="mb-1 text-danger"><i class="fas fa-exclamation-triangle"></i> limieten</li>
            {% endif %}
            {% if event.competition.overnight %}
              <li class="mb-1 text-warning"><i class="fas fa-info-circle"></i> met overnachting</li>
            {% endif %}
          {% endif %}
        </ul>

        {% if event.body is not empty %}
          <div class="mt-3 mt-md-4">{{ event.body|raw }}</div>
        {% endif %}

        {% if event.competition is empty %}
          {% if event.document is not empty or event.url is not empty %}
            <p class="text-center text-md-left">
              {% if event.url is not empty %}
                <a href="{{event.url}}" class="btn btn-sm btn-outline-primary mr-2 mb-2" target="_Blank"><i class="fas fa-info-circle"></i> meer info</a>
              {% endif %}
              {% if event.document is not empty %}
                <a href="{{ vich_uploader_asset(event, 'documentFile') }}" class="btn btn-sm btn-outline-primary mr-2 mb-2" target="_Blank"><i class="fas fa-file-pdf"></i> bijlage</a>
              {% endif %}
            </p>
          {% endif %}
        {% else %}
          {% if event.document is not empty or event.url is not empty or event.competition.documents is not empty %}
            <p class="text-center text-md-left">
              {% if event.url is not empty %}
                <a href="{{event.url}}" class="btn btn-sm btn-outline-primary mr-2 mb-2" target="_Blank"><i class="fas fa-info-circle"></i> meer info</a>
              {% endif %}
              {% if event.document is not empty %}
                <a href="{{ vich_uploader_asset(event, 'documentFile') }}" class="btn btn-sm btn-outline-primary mr-2 mb-2" target="_Blank"><i class="fas fa-file-pdf"></i> bijlage</a>
              {% endif %}
              {% if event.competition.documents is not empty %}
                {% for doc in event.competition.documents %}
                  <a href="{% if doc.document is not empty %}{{vich_uploader_asset(doc,'documentFile')}}{% else %}{{doc.url}}{% endif %}" class="btn btn-sm btn-outline-primary mr-2 mb-2" target="_Blank"><i class="fas fa-file-pdf"></i> {{doc.category}}{% if doc.description is not empty%} {{doc.description}}{% endif %}</a>
                {% endfor %}
              {% endif %}
            </p>
          {% endif %}

        {% endif %}

        {% if event.image is not empty %}
          <p class="mt-3"><img src="{{ vich_uploader_asset(event, 'imageFile') }}" class="img-fluid rounded fade-in"></p>
        {% endif %}

      </div>

    </div>

  </div>

  {% if page.calendar_posts is not empty %}

    <h5 class="m-3 ml-md-0"><i class="far fa-newspaper mr-1"></i> Gerelateerde nieuwsberichten</h5>
    {% for item in page.calendar_posts %}
      {% include 'page/item.min.html.twig' with {'item': item } %}
    {% endfor %}

  {% endif %}

{% endblock %}
