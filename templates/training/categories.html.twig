{% extends 'default.html.twig' %}

{% block title %}Aanbod{% endblock %}

{% block main %}

  <div class="p-3 mb-4 bg-white shadow-sm">

    <h1 class="text-primary">Aanbod</h1>
    <p class="lead mb-4">De HoZT-zwemmers zijn ingedeeld in volgende groepen</p>

    <p class="text-muted"><i class="fas fa-info-circle"></i> Klik op een groep voor meer informatie.<p>
    <div class="row">

    {% for category in page.training_categories %}
        <div class="col col-12 col-md-6 mb-4">
            <div class="card groups border border-gray">
                <div class="card-body d-flex align-items-center justify-content-center" style="cursor: pointer;" onclick="window.location='{{ path('training_category', {'slug': category.slug}) }}';">
                    <div class="text-center">
                        <h4 class="card-title">{{ category.name }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">{{ category.description }}</h6>
                        <p class="card-text">
                            <span class="badge badge-primary">{{ category.times }} <i class="fas fa-times"></i></span>
                            <span class="badge badge-primary">{{ category.duration }}</span><br>
                            {% for day in category.days %}
                            <span class="badge badge-medium">{{ day }}</span>
                            {% endfor %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    </div>

    <p class="mt-3 mt-md-5"><i class="fas fa-info-circle"></i> Bekijk de <a href="{{ path('training_schedule') }}">actuele trainingsuren</a> voor het overzicht van de komende weken.</p>

  </div>

{% endblock %}
