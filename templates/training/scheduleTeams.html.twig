{% extends 'default.html.twig' %}

{% block title %}Trainingsuren{% endblock %}

{% block main %}

  <div class="p-3 mb-4 bg-white shadow-sm">

    <h1 class="text-red">Trainingsuren</h1>
    <p class="lead mb-4">De HoZT-trainingsuren per groep <a href="{{ path('training_schedule_days') }}">of per dag</a></p>

    {% for category in page.training_categories %}

      <h3 class="mt-4 mt-md-5 mb-4 pt-3 border-top">{{category.name}}</h3>

      {% for team in category.teams %}

      <h5><span class="badge badge-secondary pt-1 mr-2">{{team.abbr}}</span> {{team.name}}</h5>

      <dl class="row mb-md-2">

        {% set previous = false %}
        {% for schedule in team.schedule %}

          <dt class="col-12 col-sm-2 col-lg-3 text-md-right mb-1">
            {% if previous == false or previous.day.name != schedule.day.name %}{{schedule.day}}{% endif %}
          </dt>
          <dd class="col-5 col-sm-3 col-lg-2 p-0 text-right mb-1">{{schedule.time}}</dd>
          <dd class="col-7 col-sm-7 mb-1">
            {% if schedule.comment is not empty %}
              <span class="badge badge-info ml-1"><i class="fas fa-info-circle"></i> {{schedule.comment}}</span>
            {% endif %}
            {% if schedule.description is not empty %}
              <span class="badge badge-light text-muted float-md-right mt-md-2" {% if schedule.persistent %}data-toggle="tooltip" data-placement="bottom" title="" data-original-title="{% if schedule.enddate != schedule.startdate %}van {{schedule.startdate|localizeddate('medium','none')}} tot {{schedule.enddate|localizeddate('medium','none')}}{% else %}{{schedule.enddate|localizeddate('medium','none')}}{% endif %}"{% endif %}><i class="fas fa-comment"></i> {{schedule.description}}</span>
            {% endif %}
          </dd>
          {% set previous = schedule %}
        {% endfor %}
      </dl>

      {% endfor %}

    {% endfor %}

  </div>

{% endblock %}

