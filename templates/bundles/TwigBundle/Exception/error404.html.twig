{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends '_main.html.twig' %}

{% block title %}Pagina niet gevonden{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}

  <div class="col-12 col-md-6 offset-md-3 text-center">

    <img class="mb-4 d-md-block" src="{{ asset('assets/img/logo/Hozt.svg') }}" alt="" height="100">

    <h1 class="text-red pb-3">Oeps! Er gaat iets verkeerd</h1>

    <h2>Serverfout "<strong>404</strong> Pagina niet gevonden"</h2>

    <p style="font-size:7.5rem;" class="mb-0">&#128269;</p>

    <p class="lead">
        De opgevraagde pagina kan niet gevonden worden.</br>
        Controleer de URL op spelfouten of <a href="{{ path('homepage') }}">ga naar de startpagina</a>.
    </p>

  </div>

{% endblock %}
