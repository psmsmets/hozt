{% extends 'default.html.twig' %}

{% block title %}Mijn account{% endblock %}

{% block main %}

{% set members = app.user.getMembersWithTeam() %}

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb border-none rounded-0 mb-0 smaller">
      <li class="breadcrumb-item"><a href="{{path('membership')}}">Mijn account</a></li>
      <li class="breadcrumb-item active" aria-current="page">Trainingsuren</li>
    </ol>
  </nav>

  <div class="p-2 pb-3 p-md-3 mb-4 bg-white shadow-sm">

    <h2 class="text-primary d-flex justify-content-between mb-2">Mijn trainingsuren</h2>

    <div class="row">
      <div class="col-12 col-lg-3">
        <div class="nav flex-column nav-pills bg-light" id="schedule-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link active" id="this-week-tab" data-toggle="pill" href="#this-week" role="tab" aria-controls="schedule" aria-selected="false">Deze week</a>
          <a class="nav-link" id="next-week-tab" data-toggle="pill" href="#next-week" role="tab" aria-controls="schedule" aria-selected="false">Volgende week</a>
          <a class="nav-link" id="in-two-weeks-tab" data-toggle="pill" href="#two-weeks" role="tab" aria-controls="schedule" aria-selected="true">Over twee weken</a>
        </div>
      </div>

      <div class="col-12 col-lg-9 mt-3 mt-lg-0 mx-2 mx-lg-0">
        <div class="tab-content" id="schedule-tabContent">

          <div class="tab-pane fade show active" id="this-week" role="tabpanel" aria-labelledby="schedule-this-week-tab">
            <h5><span class="text-muted mr-2 mr-md-3">Week #{{page.this_week_mon|date('W')}}</span>{{page.this_week_mon|localizeddate('long','none')}} - {{page.this_week_sun|localizeddate('long','none')}}</h5>
            {% include 'membership/schedule_week.html.twig' with {'week_schedule': page.schedule_this_week } %}
          </div>

          <div class="tab-pane fade" id="next-week" role="tabpanel" aria-labelledby="schedule-next-week-tab">
            <h5><span class="text-muted mr-2 mr-md-3">Week #{{page.next_week_mon|date('W')}}</span>{{page.next_week_mon|localizeddate('long','none')}} - {{page.next_week_sun|localizeddate('long','none')}}</h5>
            {% include 'membership/schedule_week.html.twig' with {'week_schedule': page.schedule_next_week } %}
          </div>

          <div class="tab-pane fade" id="two-weeks" role="tabpanel" aria-labelledby="schedule-next-week-tab">
            <h5><span class="text-muted mr-2 mr-md-3">Week #{{page.two_weeks_mon|date('W')}}</span>{{page.two_weeks_mon|localizeddate('long','none')}} - {{page.two_weeks_sun|localizeddate('long','none')}}</h5>
            {% include 'membership/schedule_week.html.twig' with {'week_schedule': page.schedule_two_weeks } %}
          </div>

        </div>

      </div>

    </div>

  </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{# encore_entry_script_tags('membership_competitions') #}
{% endblock %}
