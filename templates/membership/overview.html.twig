{% extends 'default.html.twig' %}

{% block title %}Mijn account{% endblock %}

{% block main %}

  <div class="p-2 pb-3 p-md-3 mb-4 bg-white shadow-sm">

    <h2 class="text-primary d-flex justify-content-between">Overzicht</h2>

    <p>Hallo {{app.user.firstname}}. [user message from flashbox]Er zijn momenteel geen meldingen.[/usesmessage]</p>

    <div class="card col-12 col-md-6">
      <div class="card-body">
        <h5 class="card-title text-muted d-flex">Leden <small><span class="badge badge-medium ml-2">1</span></small></h5>
      {% for member in app.user.getMembers() %}
        <p class="card-text">{{member}}, {{member.team.name}}{% if member.registrationId is not empty %}, <span class="text-muted">{{member.registrationId}}</span>{% endif %}</p>
      {% endfor %}

        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>

    <nav class="nav">
      <a class="nav-link disabled" href="{{path('membership')}}">Overzicht</a>
      <a class="nav-link" href="{{path('membership_competitions')}}">Wedstrijden</a>
      <a class="nav-link" href="{{path('membership_preferences')}}">Voorkeuren...</a>
    </nav>


  </div>
{% endblock %}
