{% extends 'cover.html.twig' %}

{% block title %}HoZT{% endblock %}

{% block lead %}

  {% if page.sticky_blog_post %}
  <div class="p-2 pb-3 p-md-3 mb-4 bg-white shadow-sm">

    <h2 class="text-red d-flex justify-content-between">{{ page.sticky_blog_post.title }} <i class="fas fa-thumbtack" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Sticky blogpost"></i></h2>

    {{ page.sticky_blog_post.body|raw }}

    {% if page.sticky_blog_post.image is not empty %}
        <p><img src="{{ vich_uploader_asset(page.sticky_blog_post, 'imageFile') }}" class="img-fluid rounded fade-in"></p>
    {% endif %}

    <div class="small text-muted d-flex justify-content-between">
      <span>
        <span class="pr-2"><i class="far fa-newspaper"></i> <a class="text-muted" href="{{ path('blog_category', {'slug': page.sticky_blog_post.category.slug}) }}">{{ page.sticky_blog_post.category }}</a></span>
        <span class="pr-2">{{ page.sticky_blog_post.createdAt|localizeddate('medium','none') }} <i class="far fa-clock"></i> {{ page.sticky_blog_post.createdAt|localizeddate('none','short') }}</span>
        <span class="pr-2"><i class="far fa-user" data-toggle="tooltip" data-placement="right" title="" data-original-title="{{ page.sticky_blog_post.Author.firstName }}"></i></span>
      </span>
      <span class="pr-2"><a href="{{ path('blog_post', {'id': page.sticky_blog_post.id, 'slug': page.sticky_blog_post.slug}) }}" class="text-muted"><i class="fas fa-link"></i></a></span>
    </div>

  </div>
  {% endif %}

{% endblock %}

{% block main %}

  <h4 class="m-2 ml-md-0">Laatste nieuwsberichten</h4>

  {% for blog_post in page.special_blog_posts %}
  <div class="p-2 pb-3 p-md-3 mb-4 bg-white">

    <h2 class="text-red d-flex justify-content-between">{{ blog_post.title }}</h2>

    {{ blog_post.body|raw }}

    {% if blog_post.image is not empty %}
        <p><img src="{{ vich_uploader_asset(blog_post, 'imageFile') }}" class="img-fluid rounded fade-in"></p>
    {% endif %}

    <div class="small text-muted d-flex justify-content-between">
      <span>
        <span class="pr-2"><i class="far fa-newspaper"></i> <a class="text-muted" href="{{ path('blog_category', {'slug': blog_post.category.slug}) }}">{{ blog_post.category }}</a></span>
        <span class="pr-2">{{ blog_post.createdAt|localizeddate('medium','none') }} <i class="far fa-clock"></i> {{ blog_post.createdAt|localizeddate('none','short') }}</span>
        <span class="pr-2"><i class="far fa-user" data-toggle="tooltip" data-placement="right" title="" data-original-title="{{ blog_post.Author.firstName }}"></i></span>
      </span>
      <span class="pr-2"><a href="{{ path('blog_post', {'id': blog_post.id, 'slug': blog_post.slug}) }}" class="text-muted"><i class="fas fa-link"></i></a></span>
    </div>

  </div>
  {% endfor %}
  <p class="text-right mr-2 mr-md-0"><a href="/nieuws">Alle nieuwsberichten <i class="fas fa-angle-double-right"></i></a></p>

{% endblock %}
