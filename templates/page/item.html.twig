

  <div class="p-3 mb-4 bg-white shadow-sm">

    <h2 class="text-red d-flex justify-content-between">{{ item.title|ucfirst }} {% if pinned is defined %}<i class="fas fa-thumbtack"></i>{% endif %}</h2>

    {{ item.body|raw }}

    {% if item.document is not empty or item.event is not empty %}
      <p class="text-center text-md-left">

        {% if item.document is not empty %}
          <a href="{{ vich_uploader_asset(item, 'documentFile') }}" class="btn btn-sm btn-hozt mr-2"><i class="fas fa-file-pdf"></i> bijlage</a>
        {% endif %}

        {% if item.event is not empty %}

          {% set comp = item.event.competition %}

          {% if item.publishAt < item.event.startTime|date_modify('midnight') %}

            {% for doc in comp.documentsBySlug('info') %}
              <a class="btn btn-hozt btn-sm" href="{% if doc.document is not empty %}{{vich_uploader_asset(doc,'documentFile')}}{% else %}{{doc.url}}{% endif %}"><i class="fas fa-file-pdf"></i> {{doc.category}} {{doc.description}}</a>
            {% endfor %}

            {% if comp.documentsContainSlug('programma') %}

              {% for doc in comp.documentsBySlug('programma') %}
                <a class="btn btn-hozt btn-sm" href="{% if doc.document is not empty %}{{vich_uploader_asset(doc,'documentFile')}}{% else %}{{doc.url}}{% endif %}"><i class="fas fa-file-pdf"></i> {{doc.category}} {{doc.description}}</a>
              {% endfor %}

            {% else %}

              {% for doc in comp.documentsBySlug('voorprogramma') %}
                <a class="btn btn-hozt btn-sm" href="{% if doc.document is not empty %}{{vich_uploader_asset(doc,'documentFile')}}{% else %}{{doc.url}}{% endif %}"><i class="fas fa-file-pdf"></i> {{doc.category}} {{doc.description}}</a>
              {% endfor %}

            {% endif %}

          {% else %}

            {% for doc in comp.documentsBySlug('uitslag') %}
              <a class="btn btn-hozt btn-sm" href="{% if doc.document is not empty %}{{vich_uploader_asset(doc,'documentFile')}}{% else %}{{doc.url}}{% endif %}"><i class="fas fa-file-pdf"></i> {{doc.category}} {{doc.description}}</a>
            {% endfor %}

          {% endif %}

        {% endif %}
      </p>
    {% endif %}

    {% if item.image is not empty %}
        <p><img src="{{ vich_uploader_asset(item, 'imageFile') }}" class="img-fluid rounded scroll-fade-in" style="max-height:800px;"></p>
    {% endif %}

    <div class="small text-muted d-flex justify-content-between">
      <span>
        <span class="pr-2"><i class="far fa-newspaper"></i> <a class="text-muted text-decoration-none" href="{{ path('blog_category', {'slug': item.category.slug}) }}">{{ item.category }}</a></span>
        <span class="pr-2">{{ item.publishAt|localizeddate('medium','none')|replace({'.':''}) }} <i class="far fa-clock"></i> {{ item.createdAt|localizeddate('none','short') }}</span>
        <span class="pr-2"><i class="far fa-user" data-toggle="tooltip" data-placement="right" title="" data-original-title="{{ item.Author.firstName }}"></i></span>
      </span>
      <span class="pr-2">
        {% if item.event is not empty %}
          <a href="{{ path('calendar_event', {'uuid': item.event.uuid}) }}" class="text-muted mr-2"><i class="far fa-calendar-alt"></i></a>
        {% endif %}
        <a href="{{ path('blog_post', {'id': item.id, 'slug': item.slug}) }}" class="text-muted"><i class="fas fa-link"></i></a>
      </span>
    </div>

  </div>
