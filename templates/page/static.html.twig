{% extends 'default.html.twig' %}

{% block title %}{% if page.static.titleShort is empty %}{{ page.static.title }}{% else %}{{ page.static.titleShort }}{% endif %}{% endblock %}

{% block main %}

  <div class="p-3 mb-4 bg-white shadow-sm">

    <h1 class="text-red">{{ page.static.title }}</h1>

    {% if page.static.showUpdatedAt %}
        <div class="small text-muted pb-3"><span class="modified pr-2">Laatst aangepast op {{ page.static.updatedAt|date('Y-m-d') }} <i class="far fa-clock"></i> {{ page.static.updatedAt|date('H:i') }}.</span></div>
    {% endif %}

    {% if page.static.image is not empty %}
        <p><img src="{{ vich_uploader_asset(page.static, 'imageFile') }}" class="img-fluid rounded fade-in"></p>
    {% endif %}

    {{ page.static.body|raw }}

    {% if page.document is not empty %}
      <p class="text-center text-md-left">
        <a href="{{ vich_uploader_asset(event, 'documentFile') }}" class="btn btn-sm btn-hozt"><i class="fas fa-file-pdf"></i> bijlage</a>
      </p>
    {% endif %}

  </div>

{% endblock %}
