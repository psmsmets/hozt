{% extends '_main.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}

    <form class="form-signin text-center" method="post">
      <img class="mb-4" src="{{ asset('assets/img/logo/Hozt.svg') }}" alt="" height="100">
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      <h1 class="h3 mb-3 font-weight-normal">Gelieve in te loggen</h1>
      <label for="inputEmail" class="sr-only">Email adres</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
      <label for="inputPassword" class="sr-only">Wachtwoord</label>
      <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required>
      <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
      >
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" name="_remember_me"> herinner mij
        </label>
      </div>
      <button class="btn btn-lg btn-hozt btn-block" type="submit">Inloggen</button>
    </form>

{% endblock %}
