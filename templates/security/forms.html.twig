{% extends '_main.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/security.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}

    {{ form_start(form, {attr: {class: 'needs-validation form-signin text-center'} }) }}

      <img class="mb-4" src="{{ asset('assets/img/logo/Hozt.svg') }}" alt="" height="100">

      {% include 'modules/alerts.html.twig' %}

      <h1 class="h3 mb-3 font-weight-normal">{{title}}</h1>
      {{ form_widget(form) }}

      <button class="btn btn-lg btn-hozt btn-block mt-3" type="submit">{{submit}}</button>

    {{ form_end(form) }}

{% endblock %}
