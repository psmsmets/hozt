{% extends '_main.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('security') }}
{% endblock %}


{% block body %}

    {{ form_start(form, {attr: {class: 'needs-validation form-signin text-center'} }) }}

      <a href="{{ path('homepage') }}"><img class="mb-4" src="{{ asset('assets/img/logo/Hozt.svg') }}" alt="" height="100"></a>

      {% include 'modules/alerts.html.twig' %}

      <h1 class="h3 mb-3 font-weight-normal">{{title}}</h1>
      {{ form_widget(form) }}

      {% if password_requirements is defined %}
        <small class="text-left">{{password_requirements.length}}<ul>
        {% for detail in password_requirements.details %}
          <li>{{detail}}</li>
        {% endfor %}
        </ul></small>
      {% endif %}

      <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">{{submit}}</button>

      <p class="mt-3 text-right smaller"><a href="{{ path('homepage') }}" class="text-decoration-none"><i class="fas fa-angle-double-right"></i> naar de startpagina <i class="fas fa-swimming-pool"></i></a></p>

    {{ form_end(form) }}

{% endblock %}


{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('hozt') }}
{{ encore_entry_script_tags('form_default') }}
{% endblock %}
